################ Backend & Providers

terraform {
  backend "gcs" {
    credentials = "<%= @deploy['gcs']['credentials'] %>"
    bucket  = "<%= @deploy['gcs']['terraform_bucket'] %>"
    prefix = "hc"
  }
}
provider "hcloud" {
  version = "~> 1.16"
  token = var.hcloud_token
}
provider "cloudflare" {
  version = "~> 2.0"
  api_token  = file(var.cloudflare_token)
}
provider "random" {
  version = "~> 2.2"
}

